*/ * {
  font-family: MesloLGS Nerd Font; /* Custom font with icon support */
  font-size: 18px; /* Consistent font size */
  min-height: 0; /* Allow elements to shrink */
}
#waybar {
  background: transparent;
  color: #f8f8f2;
  margin: 2px 2px;
}

#workspaces {
  border-radius: 5px;
  margin: 5px;
  background: #282a36;
  margin-left: 1rem;
}

#workspaces button {
  color: #6272a4;
  border-radius: 5px;
  padding: 0.4rem;
}

#workspaces button.active {
  color: #8be9fd;
  border-radius: 5px;
}

#workspaces button:hover {
  color: #f8f8f2;
  border-radius: 5px;
}

#custom-music,
#tray,
#backlight,
#clock,
#battery,
#pulseaudio,
#network,
#cpu,
#memory,
#disk,
#custom-netspeed,
#custom-lock,
#custom-power {
  background-color: #282a36;
  padding: 0.5rem 1rem;
  margin: 5px 0;
  border-radius: 0px 5px 5px 0px;
}

#custom-stream_status {
  background-color: #282a36;
  padding: 0.5rem 1rem;
  margin: 5px 0;
  border-radius: 0px 5px 5px 0px;
}

#custom-stream_status.up {
  color: #50fa7b;
}

#custom-stream_status.warning {
  color: #f1fa8c;
}

#custom-stream_status.down {
  color: #ff5555;
}

#memory {
}

#clock {
  color: #bd93f9;
  border-radius: 5px;
  margin-right: 1rem;
}

#battery {
  color: #50fa7b;
}

#battery.charging {
  color: #50fa7b;
}

#battery.warning:not(.charging) {
  color: #ff5555;
}

#backlight {
  color: #f1fa8c;
}

#backlight,
#battery {
  border-radius: 0;
}

#pulseaudio {
  color: #ff5555;
  border-radius: 5px 0px 0px 5%;
  margin-left: 1rem;
}

#custom-music {
  color: #ff79c6;
  border-radius: 5px;
}

#custom-lock {
  padding: 0.5rem 1rem;
  margin: 5px 0;
  border-radius: 5px 0px 0px 5px;
  color: #f8f8f2;
}

#custom-power {
  margin-right: 1rem;
  border-radius: 0px 5px 5px 0px;
  color: #ff5555;
}

#tray {
  margin-right: 1rem;
  margin-left: 1rem;
  border-radius: 5px;
}

#disk {
  color: #8be9fd;
}

#custom-netspeed,
#network {
  background-color: #282a36;
  padding: 0.5rem 1rem;
  margin: 5px 0;
  border-radius: 5px;
  color: #8be9fd;
}

#custom-netspeed.disconnected {
  background-color: #282a36;
  padding: 0.5rem 1rem;
  margin: 5px 0;
  border-radius: 5px;
  color: #8be9fd;
}

#custom-launcher {
  padding-left: 1px;
  margin: 5px 0;
  border-radius: 5px;
  color: #f8f8f2;
}
