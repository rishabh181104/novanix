{
  "pyprland": {
    "plugins": ["scratchpads", "magnify"]
  },
  "scratchpads": {
    "term": {
      "command": "kitty --class scratchpad",
      "margin": 50
    },
    "spotify": {
      "command": "spotify --scratchpad",
      "margin": 50,
      "unfocus": "hide",
      "animation": "fromTop"
    },
    "pavucontrol": {
      "command": "pavucontrol",
      "margin": 50,
      "unfocus": "hide",
      "animation": "fromTop"
    }
  }
}
